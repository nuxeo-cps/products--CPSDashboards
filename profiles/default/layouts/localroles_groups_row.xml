<?xml version="1.0"?>
<!-- unique difference so far with roadmap conterpart:
     Checkbox, properties input_name & format_string -->
<object name="roadmap_groups_row" meta_type="CPS Layout">
 <property name="layout_view_method">layout_row_view</property>
  <widget name="Checkbox" meta_type="Row Boolean Widget">
    <property name="input_name">member_ids</property>
    <property name="input_type">checkbox</property>
    <property name="fields">
      <element value="group"/>
    </property>
    <property name="format_string">group:%s</property>
  </widget>

   <widget name="title" meta_type="String Widget">
    <property name="is_i18n">True</property>
    <property name="label">label_name</property>
    <property name="fields">
      <element value="group"/>
    </property>
  </widget>

   <widget name="description" meta_type="String Widget">
     <property name="is_i18n">True</property>
     <property name="label">label_description</property>
     <property name="fields">
       <element value="description"/>
     </property>
   </widget>

  <table>
    <row>
      <cell name="Checkbox"/>
    </row>
    <row>
      <cell name="title"/>
    </row>
    <row>
      <cell name="description"/>
    </row>
  </table>
</object>
